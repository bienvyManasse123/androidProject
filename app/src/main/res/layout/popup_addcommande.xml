<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remplir les informations"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Choisir la date du livraison"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Choisir si-dessous le mode de payement: "
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/spinnerModePaiement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:entries="@array/mode_paiement_array" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Choisir si-dessous le mode de livraison: "
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/spinnerModeLivraison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:entries="@array/mode_livraison_array" />
        <TextView
            android:id="@+id/txtviewadresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Saisir une adresse:"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/txtadresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:hint="Adresse de livraison"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/annulercmd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler"/>
            <Button
                android:id="@+id/validercmd"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>