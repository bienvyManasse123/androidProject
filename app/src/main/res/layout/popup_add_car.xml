<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajout d'une voiture"
            android:textSize="35sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/image_car"
                android:id="@+id/imgaddcar"/>

            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/modele"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="Modele"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />
            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/marque"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="Marque"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />
            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/prix"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="Prix"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />
            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="Déscription"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />

            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/carburant"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="Carburant"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />
            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/kilometrage"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="Kilométrage"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />
            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/couleur"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="couleur"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />
            <EditText
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:id="@+id/nbrsiege"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:hint="nombre place"
                android:inputType="text"
                android:drawableLeft="@drawable/sharp_contacts_product_24"
                android:drawablePadding="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler"
                android:id="@+id/btnannuler"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajouter"
                android:id="@+id/btnajouter"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>