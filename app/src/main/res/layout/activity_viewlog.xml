<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im"
    tools:context=".viewlog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="250dp"
            android:gravity="center_vertical"
            android:padding="20dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="AUTHENTIFIQUATION"
                android:textColor="@color/white"
                android:padding="8dp"
                android:textSize="30sp"/>

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtemail"
                android:layout_marginTop="50dp"
                android:padding="20dp"
                android:hint="Email"
                android:layout_gravity="center"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="15dp"
                android:background="@drawable/levender"/>

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtmotdepasse"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:hint="Mot de passe"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/round_lock_24"
                android:drawablePadding="15dp"
                android:background="@drawable/levender"/>
            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtmotdepasseconf"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:hint="Confirmer"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/round_lock_24"
                android:drawablePadding="15dp"
                android:background="@drawable/levender"/>

            <Button
                android:id="@+id/connexion"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Se connecter"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:drawablePadding="15dp"
                android:layout_gravity="center"
                android:padding="20dp" />

            <TextView
                android:id="@+id/txtinscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Déjà utilisateur ? S'inscrire !"
                android:layout_marginTop="30dp"
                android:textColor="@color/lav"
                android:padding="8dp"
                android:textSize="18sp"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>